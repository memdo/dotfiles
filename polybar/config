[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "ï†¼  "
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
# exec = echo "ïŠ"
exec = echo "   ïˆ  "
format = <label> 
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo "ïŒ"
hook-1 = echo "ï‹"
initial = 1
click-left = playerctl -p spotify play-pause

[module/spotify-next]
type = custom/script
# exec = echo "ï"
exec = echo "  ï‘"
format = <label>
click-left = playerctl next spotify

