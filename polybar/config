secondary = ${xrdb:color4:#222}
alert = ${xrdb:color3:#222}

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 99.5%
height = 35
offset-x = 0.25%
offset-y = 0.5%
