[module/spotify]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = "     "
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/spotify-prev]
type = custom/script
# exec = echo ""
exec = echo "   "
format = <label> 
click-left = playerctl -p spotify previous

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo ""
hook-1 = echo ""
initial = 1
click-left = playerctl -p spotify play-pause

[module/spotify-next]
type = custom/script
# exec = echo ""
exec = echo "  "
format = <label>
click-left = playerctl -p spotify next

[module/xwindow]
type = internal/xwindow
label = %title:0:%

[module/xkeyboard]
