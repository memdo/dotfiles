[module/divider]
type = custom/text
content-padding = 1
content = "|  "

[module/launch]
type = custom/text
content-padding = 1

[module/rofi]
inherit = module/launch
content = " "
click-left = rofi -modi drun -show &

[module/apps]
type = custom/text
content-padding = 1

[module/browser]
inherit = module/apps
content = "firefox"
click-left = firefox-nightly &

[module/term]
inherit = module/apps
content = "term"
click-left = alacritty &

[module/files]
inherit = module/apps
content = "thunar"
click-left = thunar &

[module/code]
inherit = module/apps
content = "code"
click-left = vscodium &

[module/spot]
inherit = module/apps
content = "spotify"
